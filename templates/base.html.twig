<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href={{ asset("css/style.css") }}>
    <link rel="stylesheet" href=https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css>
    <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.png') }}"/>
    <title> {% block title %} BucketList {% endblock %}</title>
</head>
<body>
<div class="container-fluid p-4">
    {% for label, messages in app.flashes(['success']) %}
        {% for message in messages %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="form-row">
        <div class="form-group col-md-6">
            <header>
                <a href="{{ path('main_home') }}" title="GO back home">
                    <img class="logo" src="{{ asset('img/logo-512.png') }}" alt="Logo">
                </a>
            </header>
        </div>
        {% block welcomeMessage %}
        {% endblock %}
        <div class="form-group col-md-6">
            <main>
                <h1>BucketList - {% block pageName %} Home {% endblock %}</h1>
                <div class="form-group col-md-12">
                    {% block nav %}
                    {% endblock %}
                </div>
            </main>
        </div>
    </div>
    {% block footer %}
        <footer>
            <div>
                <p> Â©Bucket-List {{ "now"|date("Y") }}</p>
            </div>
        </footer>
    {% endblock %}
</div>
</body>
{% block body %}
{% endblock %}
</html>