<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href={{ asset("css/style.css") }}>
    <link rel="stylesheet" href=https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css>
    <script crossorigin="anonymous"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.png') }}"/>
    <title> {% block title %} BucketList {% endblock %}</title>
</head>
<body>
{% block main %}
    <div class="container-fluid p-4">
        {% for label, messages in app.flashes(['success']) %}
            {% for message in messages %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <header class="row">
            <a class="col-sm-4" href="{{ path('main_home') }}" title="GO back home">
                <img class="logo" src="{{ asset('img/logo-512.png') }}" alt="Logo">
            </a>
            {% block welcomeMessage %}
            {% endblock %}
        </header>
        <div class="form-group col-md-6">
            <main>
                <h1>BucketList - {% block pageName %} Home {% endblock %}</h1>
                <div class="form-group col-md-12">
                    {% block nav %}
                    {% endblock %}
                </div>
            </main>
        </div>
        <footer class="row d-flex justify-content-center">
            <p> Â©Bucket-List {{ "now"|date("Y") }}</p>
        </footer>
    </div>
{% endblock %}
</body>
{% block body %}
{% endblock %}
</html>