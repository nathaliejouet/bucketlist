<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href={{ asset("css/style.css") }}>
    <link rel="stylesheet" href=https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.png') }}"/>
    <title> {% block title %} BucketList {% endblock %}</title>
</head>
<body>
{% block main %}
    <div class="container-fluid p-4">
        <header class="row">
            <a class="col-sm-4" href="{{ path('main_home') }}" title="GO back home">
                <img class="logo" src="{{ asset('img/logo-512.png') }}" alt="Logo">
            </a>
            <div class="form-group col-md-8">
                {% block nav %}
                {% endblock %}
            </div>
            <div class="form-group col-md-8">
                <h2>BucketList - {% block pageName %} Home {% endblock %}</h2>
            </div>
            {% block welcomeMessage %}
            {% endblock %}
        </header>
        {% for label, messages in app.flashes %}
            <div class="container">
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        <main>
            {% block body %}
            {% endblock %}
        </main>
        <footer class="row d-flex justify-content-center">
            <p> Â©Bucket-List {{ "now"|date("Y") }}</p>
        </footer>
    </div>
    {% block js %}{% endblock %}
{% endblock %}
</body>
</html>